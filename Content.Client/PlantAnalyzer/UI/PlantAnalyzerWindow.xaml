<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'plant-analyzer-interface-title'}"
               MinSize="300 500"
               SetSize="300 500">
    <BoxContainer
        Name="RootContainer"
        Orientation="Vertical">
        <Label
            Name="NoData"
            Text="{Loc plant-analyzer-window-no-seed-information-text}" />
        <BoxContainer
                Name="PlantDataContainer"
                Orientation="Vertical"
                Margin="0 0 5 10">
            <Label
                Name="PlantName"
                Margin="0 0 5 10"/>
            <Label
                Name="Yield"
                Margin="0 8 5 10"/>
            <Label
                Name="Potency"
                Margin="0 8 5 10"/>
            <Label
                Name="Repeat"
                Margin="0 8 5 10"/>
            <Label
                Name="Chemicals"
                Margin="0 8 5 10"/>           
            <Label
                Name="Gases"
                Margin="0 8 5 10"/>
            <Label
                Name="Traits"
                Margin="0 8 5 10"/>
        </BoxContainer>
        <BoxContainer
            Name="GroupsContainer"
            Orientation="Vertical">
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
